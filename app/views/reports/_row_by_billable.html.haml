%tr
  %td{:colspan=>2}
    %table.reports
      %thead
        %tr
          %th Billable
          %th Hours
      - entries.group_by(&:billable).each do |billable_flag,sub_entries|
        %tr
          %td=billable_flag ? "YES" : "NO"
          %td=sub_entries.sum(&:duration) / 60

        - if local_assigns.has_key?(:show_drilldown) && show_drilldown
          = drill_down_row(sub_entries, "by_user")
          = drill_down_row(sub_entries, "by_project")
          = drill_down_row(sub_entries, "by_task")
